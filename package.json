{
  "name": "@howto/browser-modules",
  "version": "0.0.0",
  "description": "A sample repo demonstrating package.json config for a browser module published to NPM",
  "author": {
    "name": "Josh Crowther",
    "email": "jshcrowthe@gmail.com",
    "url": "https://jcrowther.io"
  },
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "module": "",
  "browser": {},
  "keywords": [
    "howto",
    "modules",
    "browser",
    "package.json"
  ],
  "devDependencies": {
    "nsp": "^2.6.3",
    "eslint": "^4.1.0",
    "prettier": "^1.7.0",
    "husky": "^0.14.3",
    "lint-staged": "^4.2.1",
    "eslint-config-prettier": "^2.4.0",
    "eslint-plugin-prettier": "^2.2.0",
    "eslint-config-xo": "^0.18.2",
    "jest": "^21.0.0",
    "jest-cli": "^21.0.0"
  },
  "scripts": {
    "prepublish": "nsp check",
    "pretest": "eslint .",
    "precommit": "lint-staged",
    "test": "jest"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "printWidth": 90
        }
      ]
    },
    "plugins": [
      "prettier"
    ]
  },
  "repository": "jshcrowthe/howto-browser-modules",
  "jest": {
    "testEnvironment": "node"
  },
  "license": "MIT"
}
